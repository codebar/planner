%li.job
  %h4= link_to job.title, member_job_preview_path(job)
  %dl
    %dt= t('job.company')
    - if job.company_website.present?
      %dd= link_to job.company, job.company_website
    - else
      %dd= job.company
    %br
    %dt= t('job.published_on')
    %dd= l(job.created_at, format: :date)
    %dt= t('job.expires_on')
    %dd= l(job.expiry_date, format: :date)
    %dt= t('job.location.title')
    %dd
      - if job.remote
        =t('job.location.remote')
      - else
        =job.location
