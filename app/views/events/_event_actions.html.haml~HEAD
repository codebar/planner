- if @event.announce_only
  =link_to @event.external_url, class: 'button round' do
    Go to external booking site
- else
  - if @event.invitable
    - if logged_in?
      - unless @event.coaches_only?
        =link_to event_student_rsvp_path(@event), class: 'button round' do
          = t('events.attend_as_student')
      - unless @event.students_only?
        =link_to event_coach_rsvp_path(@event), class: 'button round' do
          = t('events.attend_as_coach')
    - else
      = link_to "Sign up", new_member_path, class: 'button'
      = link_to "Log in", login_path, class: 'button'
  - else
    %em= t('event.not_open_for_rsvp')
