= render partial: 'shared/title', locals: { title: "Pending Jobs ", date: nil }

- unless @jobs.any?
  .row
    .large-12.columns
      %p
        There are no jobs available at the moment

- @jobs.each do |job|
  .row
    .large-12.columns
      .panel.callout
        %h4
          =link_to job_preview_path(job) do
            #{job.title} at #{job.company}
            %small.fa.fa-location-arrow
              = job.location
        =link_to job_preview_path(job) do
          %p
            =truncate(sanitize(dot_markdown(job.description), tags: { }), length: 200)
        %p.text-right
          Posted by #{job.created_by.full_name} on #{l(job.created_at, format: :date)}
