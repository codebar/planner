%section#banner
  .row
    .medium-12.columns
      %h2 Create Meeting

      = simple_form_for [:admin, @meeting] do |f|
        .row
          .large-12.columns
            .row
              .large-4.columns
                = f.input :name, label: 'Event Name'
              .large-4.columns
                = f.input :slug, placeholder: 'for URI, e.g. monthly-feb-2016'
            .row
              .large-6.columns
                = f.input :date_and_time, as: :datetime, required: true, label: "Date"
        .row
          .large-12.columns
            = f.input :description, as: :text
        .row
          .large-3.columns
            = f.input :spaces, as: :integer
        .row
          .large-3.columns
            = f.association :venue, input_html: { data: { placeholder: "Select venue" }}, required: true
        .row
          .large-6.columns
            %label Organisers
            = f.collection_select :organisers, Member.all,
            :id, :full_name, { selected: @meeting.organisers.map(&:id) }, { multiple: true }

        .row
          .large-6.columns
            %br
            = f.input :invitable, as: :boolean, hint: "Allow members to RSVP"
        .row
          .large-12.columns.text-right
            = f.submit "Save", class: "button"

%br
